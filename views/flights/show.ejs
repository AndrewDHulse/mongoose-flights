<%-include('../partials/header')%>

<section id="show-page">
    <div>Airline: </div>
    <div><%= flight.airline %></div>
    <div>Airport:</div>
    <div><%= flight.airport %></div>
    <div>Flight Number:</div>
    <div><%= flight.flightNo %></div>
    <div>Departure:</div>
    <div><%= flight.departs %></div>
    <!--ticket section-->
    <div>Tickets:</div>
    <ul>
      <% tickets.forEach(function(ticket) { %>
        <li>
          Seat: <%= ticket.seat %><br>
          Price: <%= ticket.price %><br>
        </li>
      <% }); %>
    </ul>
  </section>
  <!--button for flight. why 404?-->
      <form action="/flights/<%= flight._id%>/tickets/new" method="GET">
        <button type="submit">Add Ticket</button>
      </form>

<br><h2>Where Yall Headed?</h2>
<form id="add-destinations-form" method="POST"
    action="/flights/<%=flight._id%>/destinations">
    <label>Destination(s):
        <select name="airport">
            <option value="AUS"> Austr(al)ia </option>
            <option value="DFW">Don't Freakin' Worry</option>
            <option value="DEN" selected>Dominion of Elven Nurturers</option>
            <option value="LAX">LAX, not  everything needs to be a joke</option>
            <option value="SAN">Comic San(s)</option>
        </select>
    </label>

    <label> Date of Arrival
        <input type="datetime-local" name="arrival" value="2024-07-05T00:00"> 
    </label>
    <input type="submit" value="add destination">
</form>

    <table>
      <thead>
        <tr>
          <th>Airport:</th>
          <th>Arrival date:</th>
        </tr>
      </thead>
      <tbody>
        <% flight.destinations.forEach(function(d) { %>
          <tr>
            <td><%= d.airport %></td>
            <td><%= d.arrival %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>

<%- include('../partials/footer')%>